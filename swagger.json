{
    "swagger": "2.0",
    "host": "localhost:8081",
    "basePath": "/api/pitchonline",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
      "/login": {
        "post": {
            "tags": [
              "Users"
            ],
            "description": "Login a use to the system",
            "parameters": [
              {
                "name": "user",
                "in": "body",
                "description": "User we are logging in",
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            ],
            "produces": [
              "application/json"
            ],
            "responses": {
              "200": {
                "description": "Logging in a user",
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          }
      }
  },
  "definitions": {
    "User": {
      "required": [
        "username",
        "_id"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "username": {
          "type": "string",
          "uniqueItems": true
        },
        "password": {
          "type": "string"
        },
        "avatar": {
            "type": "string"
        }
      }
    }
  }
}